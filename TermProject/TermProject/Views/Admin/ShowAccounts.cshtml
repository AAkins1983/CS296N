@model IEnumerable<NewUser>

@{
    ViewData["Title"] = "Show All Users";
}

<h4>User Accounts</h4>
<table>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3">No User Accounts</td></tr>
    }
    else
    {
        foreach (NewUser user in Model)
        {
        @:<p>
            @:Name: @user.FirstName @user.LastName<br />
            @:UserName: @user.UserName<br />
            @:Email: @user.Email<br />

            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-info">Edit</a>
            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-info">Delete</a>
        @:</p>
        }
    }
</table>
<a asp-action="NewUser">Create an Account</a><br />
<a asp-action="Index">Admin Page</a>

