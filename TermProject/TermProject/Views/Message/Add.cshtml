    ViewData["Title"] = "Add Message";
}

<div>
    <form method="post">
        <div>
            <label for="name">Your Name: </label><br />
            <input name="name" />
        </div>
        <div>
            <label for="email">Your Email: </label><br />
            <input name="email" />
